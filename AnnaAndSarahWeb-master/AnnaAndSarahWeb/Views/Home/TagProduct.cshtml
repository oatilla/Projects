@model  IEnumerable<AnnaAndSarahWeb.Models.vw_tag_cat_product>
@{
    ViewBag.Title = "TagProduct";
    Layout = "~/Views/Shared/AltSayfa.cshtml";
}
<section class="parent-categorys" role="main">
    <div class="container">
        <div class="clearfix">
            <div id="product-category-menu">
                <ul class="list-unstyled list-inline clearfix">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div style="background-image:url('../../images/Categories/@item.Image')">
                                <span>
                                    <a href="~/Home/Product/@item.LinkUrl">
                                        @Html.DisplayFor(y => item.CatName)
                                    </a>
                                </span>
                            </div>
                        </li>
                    }
