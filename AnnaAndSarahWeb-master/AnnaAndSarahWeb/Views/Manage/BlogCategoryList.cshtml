@model IEnumerable<AnnaAndSarahWeb.Models.tblBlogCategory>

@{
    ViewBag.Title = "BlogCategoryList";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Blog Category List</h2>
    
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    @Html.ActionLink("New Blog Category", "AddBlogCategory")
                </h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Banner Name</th>                     
                            <th>Update Banner</th>                     
                            <th>Delete Banner</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CName)
                                </td>                                                               
                                <td>
                                    @Html.ActionLink("Güncelle", "AddBlogCategory", new { id = item.Cid })
                                </td>
                                <td>
                                    @Html.ActionLink("Sil", "DeleteBlogCategory", new { id = item.Cid })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Banner Name</th>
                            <th>Update Banner</th>
                            <th>Delete Banner</th>                            
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div>
    </div><!-- /.col -->
</div>