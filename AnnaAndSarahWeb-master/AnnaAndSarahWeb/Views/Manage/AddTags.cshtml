@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">
                <b>
                    Insert Tag
                </b>                
            </h3>
        </div><!-- /.box-header -->
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-xs-3">
                        <b>
                            @Html.LabelFor(model => model.TagName, htmlAttributes: new { @class = "control-label col-md-2" })
                        </b>

                        @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TagName, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-xs-4">
                        <b>
                            @Html.LabelFor(model => model.TagColor, htmlAttributes: new { @class = "control-label col-md-2" })
                        </b>

                        @Html.EditorFor(model => model.TagColor, new { htmlAttributes = new { @class = "form-control", @placeholder = "#123456 formatta giriniz..." } })
                        @Html.ValidationMessageFor(model => model.TagColor, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-xs-5">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
