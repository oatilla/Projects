@model IEnumerable<AnnaAndSarahWeb.Models.tblBlog>

@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Blog List</h2>    
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    @Html.ActionLink("Create New Blog", "AddBlog")
                </h3>
                <hr />
                <h3 class="box-title">
                    @Html.ActionLink("Create New Category", "AddBlogCategory")
                </h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Blog Adı</th>
                            <th>Blog Açıklama</th>
                            <th>Blog Resim</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BAd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BAciklama)
                                </td>
                                <td style="width: 60px;">
                                    <img src="~/images/Blog/@item.BResim" alt="Raw Almonds" class="current-product-img img-responsive center-block" />
                                </td>
                                <td>
                                    @Html.ActionLink("Güncelle", "AddBlog", new { id = item.Bid })
                                </td>
                                <td>
                                    @Html.ActionLink("Sil", "DeleteBlog", new { id = item.Bid })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Blog Adı</th>
                            <th>Blog Açıklama</th>
                            <th>Blog Resim</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div>
    </div><!-- /.col -->
</div><!-- /.row -->


