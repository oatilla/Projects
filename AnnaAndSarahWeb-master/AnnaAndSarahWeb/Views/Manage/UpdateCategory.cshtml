@model AnnaAndSarahWeb.Models.Picture
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Update Category</h2>
@using (Html.BeginForm("UpdateCategory", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">
                <b>
                    
                </b>
                Adlı Ürünü Güncelle
            </h3>
        </div><!-- /.box-header -->
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-3">
                        <b>
                            Kategori Adı
                        </b>
                        @*@Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kategori Adı Güncellenecek" } })*@
                    </div>
                    <div class="col-xs-4">
                        <b>
                            Ürün Resmi
                        </b>
                        @*<img src="~/images/Categories/@ViewBag.Resim" alt="" class="current-product-img img-responsive center-block" />*@
                        <input type="file" name="yuklenecekDosya" />
                        <input type="submit" name="OK" />
                    </div>
                    <div class="col-xs-5">
                        <b>
                            Gözüksün mü?
                        </b>
                      @*@Html.CheckBoxFor(m => m.IsEnabled);*@
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div>
    </div>
}

