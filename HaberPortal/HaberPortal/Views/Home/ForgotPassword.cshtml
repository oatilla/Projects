@model HaberPortal.Models.ForgotPassword
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @*  Backlinkler kaldırılacak locale çekilecek*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <title>Forgot Password</title>
</head>
<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a href="/Views/Home/Login.cshtml"><b>Haber</b>Portal</a>
        </div>
        <!-- Portal -->
       @* <div class="lockscreen-name">Haber Portal</div>*@
        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="https://cdn2.iconfinder.com/data/icons/circle-icons-1/64/profle-128.png" alt="User Image">
            </div>
            <!-- /.lockscreen-image -->
            <!-- lockscreen credentials (contains the form) -->

            @using (Html.BeginForm("GetPassword", "Home", FormMethod.Post, new { @class = "lockscreen-credentials", placeholder = "Email" }))
            {
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email)

                    <div class="input-group-btn">
                        <button type="submit" class="btn"><i class="fa fa-arrow-right text-muted"></i></button>
                    </div>
                </div>

            }
            <!-- /.lockscreen credentials -->
        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            @ViewBag.ForgotMessage
        </div>

        <div class="lockscreen-footer text-center">
            &copy; @ViewBag.FoundDate <b><a href="http://galgale.com" class="text-black">HaberPortal</a></b><br>
            Tüm Hakları Saklıdır.
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
